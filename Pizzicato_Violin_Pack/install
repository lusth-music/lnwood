echo you may be asked for your local password ...
TARGET=/usr/local/share/samples/violin/
sudo mkdir -p $TARGET
echo converting flac to rra...
for i in pizzicato_A#3.flac pizzicato_A3.flac pizzicato_A#4.flac pizzicato_A4.flac pizzicato_Ab3.flac pizzicato_Ab4.flac pizzicato_B3.flac pizzicato_B4.flac pizzicato_Bb3.flac pizzicato_Bb4.flac pizzicato_C#4.flac pizzicato_C4.flac pizzicato_C#5.flac pizzicato_C5.flac pizzicato_D#4.flac pizzicato_D4.flac pizzicato_D#5.flac pizzicato_D5.flac pizzicato_Db4.flac pizzicato_Db5.flac pizzicato_E4.flac pizzicato_E5.flac pizzicato_Eb4.flac pizzicato_Eb5.flac pizzicato_F#4.flac pizzicato_F4.flac pizzicato_F#5.flac pizzicato_F5.flac pizzicato_G#3.flac pizzicato_G3.flac pizzicato_G#4.flac pizzicato_G4.flac pizzicato_G5.flac pizzicato_Gb4.flac pizzicato_Gb5.flac; do
    flac2rra $i
    where=`dirname $i`
    name=`basename $i .flac`
    if [ $where = "." ]
        then
        sudo cp $name.rra $TARGET/
    else
        sudo mkdir -p $TARGET/$where
        sudo cp $where/$name.rra $TARGET/$where/
    fi
    rm $i
done
